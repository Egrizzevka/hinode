---
// import { Image } from "astro:assets";

const divisions = [
  {
    name: "BAHASA (語/ご)",
  },
  {
    name: "BUDAYA  (文化 / ぶんか)",
  },
  {
    name: "SEJARAH (歴史 / れきし)",
  },
];
---

<section class="m-auto px-6 pb-10 sm:px-14 md:px-16">
  <div class="flex flex-col items-center gap-8">
    <h1 class="font-bold text-center text-4xl">DIVISI</h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5 w-full">
      {divisions.map((division) => (
        <div
          class="flex flex-col gap-5 p-5 border rounded dark:bg-neutral-800 dark:border-neutral-700"
        >
          <div class="bg-slate-300 aspect-video" />

          <h2 class="text-center text-xl font-bold font-zenka">
            {division.name}
          </h2>
        </div>
      ))}
    </div>
  </div>
</section>
